{
    "name": "git-clone-mirror-vsts-task",
    "version": "0.1.0",
    "description": "A simple cross-platform utility to mirror a Git repository to another location",
    "scripts": {
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "build": "npm run clean && tsc && webpack",
        "test": "nyc mocha --reporter mocha-junit-reporter --reporter-options mochaFile=./.test-results/test-results.xml src/**/*.js",
        "clean": "del-cli ./src/**/*.js ./src/**/*.js.map ./index.js ./index.js.map ./.nyc_output ./.coverage ./.test-results ./.release *.vsix .taskkey",
        "package": "tfx extension create --manifest-globs manifest.json"
    },
    "author": {
        "name": "Travis Kosarek",
        "email": "travis.kosarek@gmail.com"
    },
    "license": "ISC",
    "private": true,
    "dependencies": {
        "shelljs": "^0.8.1",
        "vsts-task-lib": "^2.1.0"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/mocha": "^2.2.47",
        "@types/node": "^9.4.0",
        "@types/shelljs": "^0.7.8",
        "@types/sinon": "^4.1.3",
        "chai": "^4.1.2",
        "copy-webpack-plugin": "^4.3.1",
        "del-cli": "^1.1.0",
        "mocha": "^5.0.0",
        "mocha-junit-reporter": "^1.17.0",
        "nyc": "^11.4.1",
        "require-dir": "^0.3.2",
        "run-sequence": "^2.2.1",
        "sinon": "^4.2.2",
        "tfx-cli": "^0.5.3",
        "tslint": "^5.9.1",
        "typescript": "^2.6.2",
        "webpack": "^3.10.0"
    },
    "repository": {
        "type": "git",
        "url": "https://reapergrames.visualstudio.com/travis.kosarek/_git/gcloud-vsts-task"
    },
    "nyc": {
        "per-file": true,
        "include": [
            "src/**/*.js"
        ],
        "exclude": [
            "src/**/*.spec.js"
        ],
        "reporter": [
            "text",
            "html",
            "cobertura"
        ],
        "cache": true,
        "all": true,
        "report-dir": "./.coverage"
    }
}
